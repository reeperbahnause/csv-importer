{% extends "./layout/default" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ mainTitle }}</h1>
                <h2>{{ subTitle }}</h2>
            </div>
        </div>
        <div id="app">
            <import-status></import-status>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        var jobStatusUri = '{{ route('import.job.status') }}?identifier={{ identifier }}';
        var jobStartUri = '{{ route('import.job.start') }}?identifier={{ identifier }}';
        var configDownloadUri = '{{ route('import.job.configuration.download') }}?identifier={{ identifier }}';
        var flushUri = '{{ route('flush') }}';
    </script>
    <script src="js/app.js" type="text/javascript"></script>
{% endblock %}
