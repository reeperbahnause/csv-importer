{% extends "./layout/default" %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Firefly III CSV Import Tool</h5>
                        <h6 class="card-subtitle mb-2 text-muted">v{{ version }}</h6>
                        <p class="card-text">
                            Welcome! This tool will help you import CSV files into Firefly III. It works by reading your CSV
                            file <span class="text-info">(possibly, according to a pre-generated configuration file)</span> which
                            will be submitted to the API endpoints of your Firefly III installation.
                        </p>
                        <a class="btn btn-success disabled" id="start" href="{{ route('import.start') }}">...</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
<p>
</p>
{% endblock %}
{% block scripts %}

    <script type="text/javascript">
        var uri = '{{ route('token.validate') }}';
        var tokenPageUri = '{{ route('token.index') }}';
        $.getJSON(uri).done(function (data) {
            if ('OK' === data.result) {
                $('#start').removeClass('disabled').text('Start here');
            } else {
                $('#start').hide();
                window.location = tokenPageUri;
            }
        })
    </script>
{% endblock %}
